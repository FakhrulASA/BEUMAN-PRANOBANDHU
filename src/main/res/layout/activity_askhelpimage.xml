<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
    android:background="#0288D1"

tools:context=".askhelpimage">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:padding="10dp"
        android:fontFamily="@font/amiko_semibold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:text="ব্যক্তির একটি ছবি যুক্ত করুন" />
    <TextView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poly"
        android:textSize="15dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:text="
যদি আপলোড করা চিত্রটি প্রতারণা / নকল / ব্যবহৃত / ডাউনলোড হিসাবে প্রমাণিত হয় তবে এই পোস্টটি পোস্ট করা হবে না এবং আপনার অ্যাকাউন্ট স্থায়ীভাবে অক্ষম করা হবে" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/abc"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/profileavatar" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/add"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="ছবি জগকরুন"
            android:textColor="#ffffff"

            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundColor="#039BE5"
            app:corners="4dp"
            app:normalHeight="11dp"
            app:pressedHeight="2dp"

            app:shadowColor="#1976D2" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/next"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="পরবর্তী পদক্ষেপ >>"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundColor="#039BE5"
            app:corners="4dp"
            app:normalHeight="11dp"
            app:pressedHeight="2dp"
            app:shadowColor="#1976D2" />
    </LinearLayout>

</LinearLayout>