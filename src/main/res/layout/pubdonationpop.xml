<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/popups"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:background="#FFFFFF"
            android:textSize="22sp"
            android:textColor="#039BE5"
            android:textStyle="bold"
            android:fontFamily="@font/duru_sans"
            android:layout_height="wrap_content"
            android:text="পাবলিক দান কীভাবে কাজ করে?" />

        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/basic"
        android:textAlignment="center"
        android:background="#52FFFFFF"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:text="আপনার অনুদানটি সরাসরি প্রকল্প / কাজের মালিক দ্বারা সংগ্রহ করা হবে (বিকাশ / ব্যাংক এ্যাক প্রকল্পের মালিকের মালিকানাধীন)। তারপরে এই প্রকল্পটি আরও উন্নত করার জন্য ব্যবহার করা হবে।\n" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52FFFFFF"
            android:fontFamily="@font/basic"
            android:maxLines="10"
            android:text="প্রকল্পটি বৈধ এবং বিউম্যন টিম দ্বারা নিশ্চিত করা হয়েছে।"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>