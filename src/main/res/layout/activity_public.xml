<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    tools:context=".Public">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/faq"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_error_black_24dp"
            android:elevation="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="সহায়তা প্রেরণের বিষয়ে আরও জানতে এখানে ক্লিক করুন"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/abc"
        android:elevation="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botstroke"
            android:textColor="#3B9AFF"
            android:padding="7dp"
            android:textAlignment="center"
            android:fontFamily="@font/libre_franklin_medium"
            android:text="PROJECT: "
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#3C3C3C"
            android:fontFamily="@font/arimo"
            android:maxLines="1"
            android:text="ADDRESS : "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:fontFamily="@font/arimo"
            android:textColor="#3C3C3C"
            android:textSize="13sp"
            android:autoLink="web"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="DETAILS :"
             />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/abc"
        android:elevation="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botstroke"
            android:textColor="#3B9AFF"
            android:padding="7dp"
            android:textAlignment="center"
            android:fontFamily="@font/libre_franklin_medium"
            android:text="অ্যাকাউন্ট নম্বর এবং বিকাশ নম্বর"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/bkash"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo"
            android:maxLines="1"
            android:padding="4dp"
            android:text="NUMBER: "
            android:textColor="#FF4081"
            android:textSize="16sp" />

            />
        <TextView
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:maxLines="1"
            android:text="ACC NUMBER: "
            android:fontFamily="@font/arimo"
            android:textColor="#FF4081"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/bankname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo"
            android:textColor="#FF4081"
            android:padding="4dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:text="ADDRESS : "

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:elevation="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/abc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/julius_sans_one"
            android:text="আপনার লেনদেনের বিশদ"
            android:textColor="#55B0FF"

            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:hint="নম্বর / অ্যাকাউন্ট নম্বর"
                android:paddingVertical="8dp"
                android:paddingStart="5dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >



        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >

            <EditText
                android:id="@+id/trx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:hint="টিআরএক্স আইডি / অ্যাকাউন্ট নম্বর"
                android:paddingVertical="8dp"
                android:paddingStart="5dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:hint="পরিমান"
                android:paddingVertical="8dp"
                android:paddingStart="5dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/sendz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:elevation="5dp"
            android:fontFamily="@font/sintony"

            android:text="সাহায্য পাঠান ➡"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>



    <ProgressBar
        android:id="@+id/postbar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="match_parent"
        android:layout_height="34dp" />

</LinearLayout>