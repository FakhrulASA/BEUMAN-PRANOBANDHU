<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/gradientback"
    android:paddingHorizontal="20dp"
    tools:context=".sendhelp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/abc"
            android:elevation="3dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/basic"

                android:text="নাম"
                android:textColor="#0091EA"
                android:textSize="10sp" />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingVertical="8dp"
                android:background="@drawable/botstroke"
                android:hint="নাম"
                android:inputType="textPersonName|textMultiLine"
                android:maxLength="30"
                android:maxLines="2"
                android:textSize="12sp"
                android:minLines="1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/basic"
                android:text="ঠিকানা"
                android:textColor="#0091EA"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/botstroke"
                    android:ems="10"
                    android:hint="ঠিকানা (বর্তমান অবস্থানের জন্য + টিপুন)"
                    android:inputType="textPostalAddress"
                    android:maxLines="2"
                    android:paddingVertical="8dp"
                    android:textSize="12sp"

                    />

                <Button
                    android:id="@+id/addlocation"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:background="@drawable/ic_add_location_black_24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/basic"
                android:text="চাহিদা"
                android:textColor="#0091EA"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingVertical="8dp"
                android:background="@drawable/botstroke"
                android:textSize="14sp"
                android:ems="10"

                android:hint="প্রয়োজন লিখুন"
                android:inputType="textEmailAddress"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/basic"
                android:text="ফোন নম্বর (যদি থাকে)"
                android:textColor="#0091EA"
                android:textSize="10sp" />
               <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingVertical="8dp"
                android:background="@drawable/botstroke"
                android:textSize="12sp"
                android:ems="10"

                android:hint="ফোন নম্বর (যদি থাকে)"
                android:inputType="textEmailAddress"

                />
            <RadioGroup
                android:id="@+id/reasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:gravity="start"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/numbersss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#0091EA"
                    android:text="কারণ "


                    android:minLines="1"
                    android:inputType="number"
                    />
                <RadioButton
android:id="@+id/ss"
                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:buttonTint="#0288D1"
                    android:fontFamily="@font/duru_sans"
                    android:text="অক্ষমতা"
                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"/>
                <RadioButton

                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:text="বয়স"
                    android:layout_marginEnd="10dp"

                    android:buttonTint="#0288D1"
                    android:textSize="10sp"
                    android:textColor="#000000"/>
                <RadioButton

                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:buttonTint="#0288D1"
                    android:text="লিঙ্গ"
                    android:textSize="10sp"
                    android:textColor="#000000"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#0091EA"
                    android:text="অগ্রাধিকার  "


                    android:minLines="1"
                    android:inputType="number"
                    />
                <RadioButton
                    android:id="@+id/sss"
                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:text="জরুরী"

                    android:buttonTint="#FF6E40"
                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"/>

                <RadioButton

                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:buttonTint="#FF6E40"
                    android:text="সাধারণ"
                    android:textSize="10sp"
              />
            </RadioGroup>
            <RadioGroup
                android:id="@+id/addtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/numberss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#0091EA"
                    android:text="ঠিকানার ধরণ"


                    android:minLines="1"
                    android:inputType="number"
                    />
                <RadioButton
                    android:id="@+id/ssss"
                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:text="স্থায়ী"
                    android:textSize="10sp"
                    android:buttonTint="#388E3C"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"/>
                <RadioButton

                style="@android:style/Widget.Material.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:buttonTint="#388E3C"
                android:text="৫ ঘন্টা"
                android:textSize="10sp"
                android:textColor="#000000"/>
                <RadioButton

                    style="@android:style/Widget.Material.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/duru_sans"
                    android:text="২ ঘন্টা"

                    android:buttonTint="#388E3C"
                    android:textSize="10sp"
                    android:textColor="#000000"/>

            </RadioGroup>

            <Button
                android:id="@+id/sendx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:layout_marginHorizontal="50dp"
                android:fontFamily="@font/sintony"
                android:text="পোস্ট করুন ➡"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:elevation="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >


        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>