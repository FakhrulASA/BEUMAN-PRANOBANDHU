<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".reg">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="205dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/logopran" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/prosto_one"
        android:text="রেজিস্ট্রেশন"
        android:textAlignment="center"
        android:textColor="#1E88E5"
        android:textSize="22dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:focusable="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Subhead"
        >

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/a2"
            android:hint="  ইমেইল"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingStart="3dp"
            android:paddingVertical="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Subhead"
      android:layout_marginBottom="15dp"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/a2"
            android:hint="  পাসওয়ার্ড"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingStart="3dp"
            android:inputType="textPassword"
            android:textColorHint="#FF2A2A" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/conpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/a2"
            android:paddingStart="3dp"
            android:hint="  পাসওয়ার্ড নিশ্চিত করুন"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColorHint="#FF2A2A" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/hover"
        android:paddingVertical="12dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:text="এগিয়ে যান" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="অ্যাকাউন্ট আছে?" />

        <Button
            android:id="@+id/sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:text="সাইন ইন"
            android:translationY="-1dp"
            android:textAllCaps="false"
            android:textColor="#0288D1"

            android:textSize="15dp" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="match_parent"
        android:layout_height="34dp" />
</LinearLayout>