<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:background="@drawable/popups"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/popups"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="250dp"
            android:elevation="5dp"

            android:layout_height="wrap_content"
            android:background="@drawable/popups"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="6dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/ruluko"
            android:text="ধন্যবাদ"

            android:textColor="#53B1FF"
            android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="@font/antic"
                android:textAlignment="center"
                android:text="আপনার সহায়তা সফলভাবে রেকর্ড করা হয়েছে। শীঘ্রই আপনাকে অবহিত করা হবে"
                android:padding="10dp"
                android:maxLines="10"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/popback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbutton"
                android:elevation="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="ফিরে যান"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
           />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>