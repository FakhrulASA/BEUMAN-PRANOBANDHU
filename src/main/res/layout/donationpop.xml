<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/popups"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:background="#FFFFFF"
            android:textSize="22sp"
            android:textColor="#1FB4FF"
            android:textStyle="bold"
            android:fontFamily="@font/duru_sans"
            android:layout_height="wrap_content"
            android:text="অনুদান কীভাবে কাজ করে?" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="@font/basic"
            android:textAlignment="center"
            android:background="#52FFFFFF"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:text="আপনি যখন অনুদান বিভাগে দান করবেন তখন সরাসরি আমাদের দ্বারা অর্থ সংগ্রহ করা হবে। এই অর্থটি দরিদ্র লোকদের সত্যিকার অর্থে প্রয়োজনীয় উপকরণ / খাবার সরবরাহ করতে ব্যবহৃত হবে। । n আপনার অর্থ ব্যবহারের পরে আমরা আপনাকে জানিয়ে দেব যে আমরা কীভাবে অর্থটি ব্যবহার করেছি এবং কোথায়।" />
    </LinearLayout>

</LinearLayout>