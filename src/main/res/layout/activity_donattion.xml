<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="#F3F3F3"
    android:orientation="vertical"
    tools:context=".donattion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/faq"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_error_black_24dp"
            android:elevation="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:paddingStart="10dp"
            android:text="অনুদান সম্পর্কে আরও জানতে এখানে ক্লিক করুন"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/abc"
        android:elevation="2dp"
        android:layout_margin="20dp"

        android:orientation="vertical"
        android:paddingHorizontal="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/namea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:padding="3dp"
            android:textAlignment="center"
            android:background="@drawable/botstroke"
            android:text="লেনদেন বিবরণী"
            android:textStyle="bold"
            android:textColor="#5AAFFF"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:padding="3dp"
            android:textStyle="bold"
            android:text="পদ্ধতি: বিকাশ"
            android:textColor="#F784B8"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sintony"
            android:maxLines="1"
            android:padding="3dp"
            android:text="নম্বর: +8801234567891"
            android:textColor="#000000"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="349dp"
            android:textColor="#000000"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:text="নম্বর টাইপ: ব্যক্তিগত"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:elevation="2dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"

        android:layout_height="wrap_content"
        android:background="@drawable/abc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/julius_sans_one"
            android:text="লেনদেন বিবরণী"
            android:textColor="#44B4FF"

            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >

            <AutoCompleteTextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:hint="পরিমাণ পাঠানো হয়েছে"
                android:imeOptions="actionNext"
                android:paddingVertical="8dp"
                android:paddingStart="5dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >

            <EditText
                android:id="@+id/trx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:hint="টিআরএক্স আইডি"
                android:paddingVertical="8dp"
                android:paddingStart="5dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:hintTextAppearance="@style/TextAppearance.Compat.Notification"
            android:focusable="true"
            >

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:hint="মোবাইল নম্বর"
                android:paddingVertical="8dp"
                android:paddingStart="5dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/sendM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:elevation="5dp"
            android:fontFamily="@font/sintony"

            android:text="টাকা পাঠান➡"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>



    <ProgressBar
        android:id="@+id/pbar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="31dp" />

</LinearLayout>